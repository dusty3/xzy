<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lpf.dao.ShopCartDao">
    <resultMap id="shopCartMap" type="ShopCart">
        <id property="id" column="id"></id>
        <result property="cartproductCount" column="cart_product_count"></result>
        <result property="createCartTime" column="create_cart_time"></result>
        <result property="cId" column="c_id"></result>
        <association property="product" select="com.lpf.dao.ProductDao.findProductById" column="p_id"></association>
    </resultMap>


    <select id="findAllShopCart" parameterType="int" resultMap="shopCartMap">
        SELECT  * FROM SHOP.SHOP_CART WHERE  SHOP_CART.C_ID=#{cId}

    </select>


</mapper>
